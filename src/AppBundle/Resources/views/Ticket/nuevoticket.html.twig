{% extends 'base.html.twig' %}

{% block title %} Crear Ticket {% endblock %}


{% block body %} 
<h1> Crear Ticket </h1>

    <form>
        <div class="form-group">
            <label for="titulo">Titulo</label>
            <input type="text" class="form-control" id="titulo" placeholder="---">
        </div>

        <div class="form-group">
            <label for="descripcion">Descripcion</label>
            <input type="text" class="form-control" id="descripcion" placeholder="---">
        </div>

        <div class="form-group">
            <label for="categoria">Categoria</label>
            <input type="text" class="form-control" id="categoria" placeholder="---">
        </div>

        <div class="form-group">
            <label for="estado">Estado</label>
            <input type="text" class="form-control" id="estado" placeholder="---">
        </div>

        <div class="form-group">
            <label for="prioridad">Prioridad</label>
            <input type="text" class="form-control" id="prioridad" placeholder="---">
        </div>

        <div class="form-group">
            <label for="solicitante">Solicitante</label>
            <input type="text" class="form-control" id="solicitante" placeholder="---">
        </div>

        <div class="form-group">
            <label for="usuarioAsig">idRol</label>
            <input type="text" class="form-control" id="usuarioAsig" placeholder="---">
        </div>

        <button type="button" class="btn btn-success" id="addTicket">Guardar</button>
        <a class="btn btn-danger" href="{{ path('ticket') }}">Cancelar</a>

    </form>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>


        function  addTicket(ticket) {

           // alert(JSON.stringify(ticket));

            $.ajax({
                type: "POST",
                data: JSON.stringify(ticket),
                url: "http://systicket/app_dev.php/ticket/new/",
                error: function() {

                },
                success: function (data) {
                    //(JSON.stringify(data));
                    window.location = Routing.generate('ticket');
                }
            });

        }

        $(document).ready(function () {

            $('#addTicket').click(function () {

                var titulo = $('#titulo').val();
                var descripcion = $('#descripcion').val();
                var categoria = $('#categoria').val();
                var estado = $('#estado').val();
                var prioridad = $('#prioridad').val();
                var solicitante = $('#solicitante').val();
                var usuarioAsig = $('#usuarioAsig').val();

                addTicket({ descripcionProblema : descripcion, categoriaID: categoria, estado: estado, prioridad: prioridad, usuarioSolicitanteID: solicitante, usuarioAsignadoID: usuarioAsig, titulo: titulo });

            });


        });
    </script>


{% endblock %}
